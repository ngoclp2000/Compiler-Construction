PROGRAM  EXAMPLE3;  (* TOWER OF HANOI *)
VAR  I:INTEGER;  
     N:INTEGER;  
     P:INTEGER;  
     Q:INTEGER;
     C:CHAR;

PROCEDURE  HANOI(N:INTEGER;  S:INTEGER;  Z:INTEGER);
BEGIN
  IF  N != 0  THEN
    BEGIN
        HANOI(N-1,S,6-S-Z);
      I:=I+1;  
        WRITELN;
        WRITEI(I);  
        WRITEI(N);
       WRITEI(S);  
       WRITEI(Z);
       HANOI(N-1,6-S-Z,Z)
    END
END;  (*END OF HANOI*)

BEGIN
  FOR  N := 1  TO  4  DO  
    BEGIN
      FOR  I:=1  TO  4  DO  
          WRITEC(' ');
        READC(C);  
        WRITEC(C)
    END;
  P:=1;  
  Q:=2;
  FOR  N:=2  TO  4  DO
    BEGIN  
      I:=0;  
       HANOI (N,P,Q);  
        WRITELN  
    END
END.  (* TOWER OF HANOI *)
